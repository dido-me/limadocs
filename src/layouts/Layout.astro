---
import Footer from "@src/components/Footer.component.astro";
import Header from "@src/components/Header.component.astro";
import "@src/styles/global.css";

interface Props {
  isStaticLogo?: boolean;
  colorBackground?: string;
}

const { isStaticLogo = true, colorBackground = "#fff" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>LimaDocs - Festival Internacional de Cine Documental</title>
  </head>
  <body style={`background-color: ${colorBackground}`}>
    <Header isStaticLogo={isStaticLogo} />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    color: #191718;
  }
</style>
